{% extends 'base.html.twig' %}

{% block title %}Book index
{% endblock %}

{% block body %}
	<h1>Book index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Author</th>
				<th>Publication</th>
				<th>ISBN</th>
				<th>Image</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>Description</th>
				<th>Genre</th>
				<th>Slug</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for book in books %}
				<tr>
					<td>{{ book.title }}</td>
					<td>{{ book.author }}</td>
					<td>{{ book.publication }}</td>
					<td>{{ book.ISBN }}</td>
					<td><img src="{{ book.image }}" alt=""></td>
					<td>{{ book.createdAt ? book.createdAt|date('Y-m-d') : '' }}</td>
					<td>{{ book.UpdatedAt ? book.UpdatedAt|date('Y-m-d') : '' }}</td>
					<td>{{ book.description }}</td>
					{% if book.genre %}
						{% for genre in book.genre %}
							<td>{{ genre }}</td>
						{% endfor %}
					{% else %}
						<td></td>
					{% endif %}


					<td>{{ book.slug }}</td>
					<td>
						<a href="{{ path('app_book_show', {'id': book.id}) }}">show</a>
						<a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_book_new') }}">Create new</a>
{% endblock %}
